
public class Compte {

	private Client titulaire;
	private int noCompte;
	private long solde;

	public Compte(Client client, int noCompte, long soldeC) {
		this.titulaire = client;
		this.noCompte = noCompte;
		this.solde = soldeC;
	}
	
	public void debit(long montant) {
		this.solde -=montant;
	}
	
	public void credit(long montant) {
		this.solde +=montant;
	}
	
	public int getNoCompte() {
		return this.noCompte;
	}
	
	public String toString() {	
		String informationsTitu;
		informationsTitu = "\n\tNom du client :"+this.titulaire.getNom()+"\n\tAdresse du client :"+this.titulaire.getAdresse();
		return "\nNuméro du compte : n°"+this.noCompte+"\nTitulaire du compte :"+informationsTitu+"\nSolde du compte : "+(solde/100)+"€"+(solde%100);
	}
	
	public int getSolde() {
		return this.solde;
	}
}
